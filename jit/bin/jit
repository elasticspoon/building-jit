#!/usr/bin/env ruby

require_relative '../lib/command'

begin
  cmd = Command.execute(Dir.getwd, ENV, ARGV, $stdin, $stdout, $stderr)
  exit cmd.status
rescue Command::Unknown => e
  warn "jit: #{e.message}"
  exit 1
rescue StandardError => e
  warn "fatal: #{e.message}"
  if ENV['DEBUG']
    e.backtrace.each do |line|
      warn "          from #{line}"
    end
  end
  exit 1
end
